pcm.!default {
  type             plug
  slave.pcm       "softvol"

  # Make sound louder
	#ttable.0.0 2.0
	#ttable.1.1 2.0
}

pcm.softvol {
  type          softvol
  slave {
    pcm         "softswitch"
  }
  control {
    name        "Master Playback Volume"
    card        bytmax98090
  }
}

pcm.softswitch {
  type          softvol
  slave {
    pcm         "asymed"
  }
  control {
    name        "Master Playback Switch"
    card        bytmax98090
  }
  resolution 2
}

pcm.asymed {
  type asym
  playback.pcm "dmixer"
	capture.pcm {
      type hw
      card "bytmax98090"
      device 0
  }
}

pcm.dmixer  {
 	type dmix
 	ipc_key 1024
 	slave {
    pcm {
      type hw
      card "bytmax98090"
      device 0
    }
		period_time 0
		period_size 1024
		buffer_size 4096
		rate 44100
	}
	bindings {
		0 0
		1 1
	}
}

ctl.!default {
    type hw
    card bytmax98090
}
